<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/recipe_item_layout">
    <TextView
        android:id="@+id/txt_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        tools:text="Recipe Name"
        android:layout_margin="8dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_serves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Serves: "
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_recipe_name"/>

    <TextView
        android:id="@+id/txt_serves_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Serves: "
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_recipe_name"
        android:layout_toRightOf="@id/txt_serves"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_serves"
        android:background="@color/white"
        android:layout_margin="8dp"/>

</RelativeLayout>